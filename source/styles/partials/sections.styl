
.section {
    width: 100%;
    margin-bottom: 15px;

    &_green {
        background-color: #B3F95A;
    }

    &_blue {
        background-color: #88B5BF;
    }
}

.list {
    list-style: none;

    &_first {
        display: grid;
        grid-template-rows: 198px 198px;
        grid-template-columns: 39fr 59fr 16fr;
        grid-gap: 15px;
        grid-template-areas: \
            "el_1 el_2 el_3"\
            "el_4 el_4 el_5";
            
        .list__item {
            counter-increment: num;
            text-align: center;
            font-size: 53px;
            font-weight: 400;
            color: #fff;

            &:before {
                content: counter(num);
                width: 100%;
                height: 0;
                line-height: 198px;
            }

            &:nth-child(1) {
                grid-area: el_1;
            }

            &:nth-child(2) {
                grid-area: el_2;
            }

            &:nth-child(3) {
                grid-area: el_3;
            }

            &:nth-child(4) {
                grid-area: el_4;
            }

            &:nth-child(5) {
                grid-area: el_5;
            }
        }
    }

    &_second {
        display: flex;
        padding: 30px 15px;

        .list__item {
            width: calc((100% - 30px * 4) / 4);
            margin: 0 15px;

            &:before {
                content: '';
                display: block;
                width: 100%;
                height: 0;
                padding-top: 78%;
            }
        }
    }
    
    &__item {
        .section_green & {
            background-color: #8AD191;
        }

        .section_blue & {
            background-color: #0D89B0;
        }
    }
}