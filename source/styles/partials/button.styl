.button {
    display: block;
    position: relative;
    padding: 0 15px;
    border-radius: 5px;
    background-color: #A5C7F9;
    font-size: 0;
    color: #fff;
    transition: background-color 0.3s;

    &:hover {
        background-color: #85C7FF;
    }

    &__radio {
        position: absolute;
        display: block;
        left: 0;
        top: 0;
        width: 100%;
        height: 100%;
        opacity: 0;
        border-radius: 0;
        outline: none;
        cursor: pointer;
    }

    &__label {
        font-size: 20px;
        line-height: 39px;
        cursor: pointer;
    }
}