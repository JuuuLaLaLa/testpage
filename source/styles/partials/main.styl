/*!** main ***/
@import url('https://fonts.googleapis.com/css2?family=Roboto&display=swap');

* {
	padding: 0;
	margin: 0;
	border: 0;
	font-size: 100%;
	font: inherit;
    box-sizing: border-box;
}

html,
body {
	min-width: 320px;
	background: #fff;
	color: #fff;
	font-family: Roboto, Helvetica, sans-serif;
	font-size: 16px;
}

.wrapper {
    max-width: 1200px;
    width: 100%;
    min-height: 100vh;
    display: flex;
    flex-direction: column;
    margin: 0 auto;
    padding: 0 15px;
    background-color: #C0DBD9;
}

.content {
    flex: 1 0 auto;
}

/*!** end-main ***/